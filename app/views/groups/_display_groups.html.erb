<% @groups.each do |group| %>
  <%= link_to group do %>
  <div class="flex p-3 m-2 bg-white shadow rounded font-semibold">
    <%= display_group_image(group) %>
    <div class="flex justify-between w-full">
    
      <div class="flex flex-col justify-between h-20 pl-3">
        <p class="text-gray-400"><%= group.name %></p>
        <p class="text-xs text-gray-400"><%= group.created_at.strftime("%d %b %Y") %></p>
      </div>
        <div class="text-gray-50 self-end">
          <%= link_to 'Edit', edit_group_path(group), class: "bg-blue-500 px-4 py-1 rounded" %>
          <%= link_to 'Delete', group, class: "bg-red-600 px-4 py-1 rounded", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>
  </div>
  <% end %>
<% end %>